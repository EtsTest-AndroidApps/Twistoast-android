<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@+id/dest_real_time">

    <fragment
        android:id="@+id/dest_real_time"
        android:name="fr.outadev.twistoast.FragmentRealtime"
        android:label="@string/drawer_item_realtime">
        <action
            android:id="@+id/action_fragmentRealtime_to_fragmentNewStop"
            app:destination="@id/dest_new_stop" />
        <action
            android:id="@+id/action_fragmentRealtime_to_fragmentAbout"
            app:destination="@id/dest_about" />
        <action
            android:id="@+id/action_fragmentRealtime_to_fragmentPreferences"
            app:destination="@id/dest_settings" />
        <action
            android:id="@+id/action_fragmentRealtime_to_fragmentWebView"
            app:destination="@id/dest_time_tables" />
        <action
            android:id="@+id/action_dest_real_time_to_dest_traffic"
            app:destination="@id/dest_traffic" />
        <action
            android:id="@+id/action_dest_real_time_to_dest_pricing"
            app:destination="@id/dest_pricing" />
        <action
            android:id="@+id/action_dest_real_time_to_dest_news"
            app:destination="@id/dest_news" />
        <action
            android:id="@+id/action_dest_real_time_to_dest_routes"
            app:destination="@id/dest_routes" />
        <action
            android:id="@+id/action_dest_real_time_to_dest_map"
            app:destination="@id/dest_map" />
        <action
            android:id="@+id/action_dest_real_time_to_dest_social"
            app:destination="@id/dest_social" />
    </fragment>
    <fragment
        android:id="@+id/dest_new_stop"
        android:name="fr.outadev.twistoast.FragmentNewStop"
        android:label="@string/title_activity_add_stop" />
    <fragment
        android:id="@+id/dest_about"
        android:name="fr.outadev.twistoast.FragmentAbout"
        android:label="@string/drawer_item_about" />
    <fragment
        android:id="@+id/dest_settings"
        android:name="fr.outadev.twistoast.FragmentPreferences"
        android:label="@string/drawer_item_preferences" />
    <fragment
        android:id="@+id/dest_time_tables"
        android:name="fr.outadev.twistoast.FragmentWebView"
        android:label="@string/drawer_item_timetables">
        <argument
            android:name="url"
            android:defaultValue="@string/url_drawer_timetables"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/dest_map"
        android:name="fr.outadev.twistoast.FragmentWebView"
        android:label="@string/drawer_item_map">
        <argument
            android:name="url"
            android:defaultValue="@string/url_drawer_map"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/dest_traffic"
        android:name="fr.outadev.twistoast.FragmentWebView"
        android:label="@string/drawer_item_traffic">
        <argument
            android:name="url"
            android:defaultValue="@string/url_drawer_traffic"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/dest_routes"
        android:name="fr.outadev.twistoast.FragmentWebView"
        android:label="@string/drawer_item_routes">
        <argument
            android:name="url"
            android:defaultValue="@string/url_drawer_navigation"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/dest_news"
        android:name="fr.outadev.twistoast.FragmentWebView"
        android:label="@string/drawer_item_news">
        <argument
            android:name="url"
            android:defaultValue="@string/url_drawer_news"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/dest_pricing"
        android:name="fr.outadev.twistoast.FragmentWebView"
        android:label="@string/drawer_item_pricing">
        <argument
            android:name="url"
            android:defaultValue="@string/url_drawer_pricing"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/dest_social"
        android:name="fr.outadev.twistoast.FragmentWebView"
        android:label="@string/drawer_item_social">
        <argument
            android:name="url"
            android:defaultValue="https://mobile.twitter.com/TwistoCaen"
            app:argType="string" />
    </fragment>
</navigation>